datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Brand {
  id      String  @id @default(uuid())
  name    String  @unique
  country String?
  models  Model[]
}

model Model {
  id         String   @id @default(uuid())
  brandId    String
  name       String
  generation String?
  yearsFrom  Int?
  yearsTo    Int?
  summaryMd  String?
  brand      Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  issues     Issue[]
  recalls    Recall[]
  reports    CommunityReport[]

  @@unique([brandId, name, generation])
}

model Issue {
  id          String   @id @default(uuid())
  modelId     String
  title       String
  description String?
  severity    Int?
  createdAt   DateTime @default(now())
  model       Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)
}

model Recall {
  id        String   @id @default(uuid())
  modelId   String
  code      String?
  title     String
  summary   String?
  link      String?
  startDate DateTime?
  endDate   DateTime?
  model     Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)
}

model CommunityReport {
  id          String   @id @default(uuid())
  modelId     String
  userId      String   @db.Uuid
  mileage     Int?
  engineCode  String?
  description String
  proofUrl    String?
  occurredAt  DateTime?
  createdAt   DateTime @default(now())
  model       Model    @relation(fields: [modelId], references: [id], onDelete: Cascade)

  @@index([modelId])
  @@index([userId])
}
